@model IEnumerable<KiemTra_NguyenMinhNhat.Models.HocPhan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTest01.cshtml";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaHP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenHP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoTinChi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaHP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenHP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoTinChi)
        </td>
        <td>
            <a class="btn btn-success" href="@Url.Action("DangKyHP", "HocPhan", new { @id = item.MaHP, @strURL = Request.Url.ToString() })">
                Đăng ký
            </a>
        </td>
    </tr>
}

</table>
